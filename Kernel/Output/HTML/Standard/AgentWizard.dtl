<div class="MainBox ARIARoleMain FormScreen">
    <h1>$Text{"OTRS Wizard"}</h1>
    <p class="AsteriskExplanation">$Text{"All fields marked with an asterisk (*) are mandatory."}</p>
    <div class="ContentColumn">
<!-- dtl:block:WizardList -->
        <form action="$Env{"CGIHandle"}" method="post" enctype="multipart/form-data" name="compose" id="Wizard" class="Validate PreventMultipleSubmits">
            <input type="hidden" name="Action" value="$Env{"Action"}"/>
            <input type="hidden" name="Subaction" value="DisplayWizard"/>
            <fieldset class="TableLike">
                <label class="Mandatory" for="WizardID"><span class="Marker">*</span>$Text{"Wizard"}:</label>
                <div class="Field">
                    $Data{"WizardList"}
                    <div id="WizardIDError" class="TooltipErrorMessage"><p>$Text{"This field is required."}</p></div>
                    <div id="WizardIDServerError" class="TooltipErrorMessage"><p>$Text{"This field is required."}</p></div>
                </div>
                <div class="Spacing Clear"></div>

                <div class="Field SpacingTop">
                    <button class="Primary CallForAction" id="submitWizard" type="submit" value="$Text{"Select Step"}" ><span><i class="icon-cogs"></i> $Text{"Select Step"}</span></button>
                </div>

            </fieldset>
        </form>
<!-- dtl:block:WizardList -->
    </div>
</div>
